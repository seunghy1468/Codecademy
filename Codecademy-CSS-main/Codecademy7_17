}

/*Banner Section*/
.banner {
  background-color: #333;
  color: #fff;
  padding: 20px;
  text-align: center;
}

/*Expertise Section*/
.cards {
  background-color: #ffc200;
  display: flex;  // 수직으로 배열됨
  flex-wrap: wrap; // 다시 원래 배열로 돌아옴.. 왠지는 모르겠다.
  justify-content: space-around; // 가운데 부분에 배열됨
}

.col {
  display: inline-flex; // 같은 행에 같은 크기로 배열됨
  flex-direction: column; // 같은 열에 배열됨
  justify-content: space-between; // 수직상에서 일정한 공간만큼 떨어져 배열된다.
}

#expertise {
  padding: 20px;
  background-color: #ffc200;
